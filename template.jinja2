# System Interfaces Configuration for {{device.name}}
interfaces {
    {% for iface in device.interfaces.all() %}
    {{ iface.name }} {
        description "{{ iface.label }}";
        {% if iface.enabled %}
        {% if iface.lag %}
        ether-options {
            802.3ad {{ iface.lag.name }};
        }
        {% else %}
        unit 0 {
            {% set ipv4 = iface.ip_addresses.filter(address__net_contained="0/0") %
            {% if ipv4 %}
            family inet {
                {% for ip in ipv4 %}
                address {{ ip }};
                {% endfor %}
            }
        }
        {% endif %}
        {% else %}
        disable;
        {% endif %}
    }
    {% endfor %}
}

