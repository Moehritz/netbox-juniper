# System Interfaces Configuration for {{device.name}}
interfaces {
    {% for iface in device.interfaces.all() %}
    {{ iface.name }} {
        description "{{ iface.label }}";
        {% if iface.enabled %}
        {% if iface.lag %}
        ether-options {
            802.3ad {{ iface.lag.name }};
        }
        {% else %}
        unit 0 {
            family inet {
                {% for ip in iface.ip_addresses.filter(address__version=4) %}
                address {{ ip }};
                {{ ip.address }} {{ ip.address.version }}
                {% endfor %}
            }
        }
        {% endif %}
        {% else %}
        disable;
        {% endif %}
    }
    {% endfor %}
}

